<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/image_horizontal_margin"
        android:layout_marginStart="@dimen/image_horizontal_margin"
        android:text=""
        android:textSize="15sp"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <TextView
            android:id="@+id/owner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:gravity="start"
            android:layout_marginLeft="@dimen/image_horizontal_margin"
            android:layout_marginStart="@dimen/image_horizontal_margin"
            android:text=""
            android:textSize="12sp" />
        <TextView
            android:id="@+id/date_taken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="end"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/image_horizontal_margin"
            android:layout_marginRight="@dimen/image_horizontal_margin"
            android:text=""
            android:textSize="12sp" />
    </LinearLayout>


    <ImageView
        android:id="@+id/detail_page_photo"
        android:contentDescription="@string/image_desc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/image_horizontal_margin"
        android:layout_marginRight="@dimen/image_horizontal_margin"
        android:scaleType="fitCenter"
        android:layout_gravity="center"
        android:adjustViewBounds="true" />

</LinearLayout>